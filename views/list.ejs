<%- include("header") -%>

  <div class="box" id="heading">
    <h1> <%= listTitle %> </h1>
  </div>

  <div class="box">

    <% newListItems.forEach(function(item){%>
     <form action="/delete" method="post">
      <div class="item">
       
       <!--to submit the form when the checkbox is checked.Submitting the form is important to make the post request-->
        <!-- Binding id to the item being checked-->
       <input type="checkbox" name="checkbox" value="<%=item.id %>" onChange="this.form.submit()"> 
        <p><%=  item.name  %></p>
      </div>
      <input type="hidden" name="listName" value="<%= listTitle %>"></input>
      </form>
      <% }) %>



    

      <form class="item" action="/" method="post">
        <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
        <button type="submit" name="list" value="<%= listTitle %>">+</button>
      </form>
  </div>

<%- include("footer") -%>
